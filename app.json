{
  "expo": {
    "name": "CabRadar",
    "slug": "CabRadar",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "androidStatusBar": {
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cabradar.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "CabRadar needs your location to find nearby opportunities.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "CabRadar needs your location to notify you about nearby opportunities, even when the app is in background.",
        "NSLocationAlwaysUsageDescription": "CabRadar needs background location access to notify you about nearby opportunities.",
        "NSLocationUsageDescription": "CabRadar needs location access to work properly",
        "UIBackgroundModes": ["location", "fetch"]
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "icon": "./assets/images/app-icon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon.png",
        "backgroundImage": "./assets/images/app-icon.png",
        "backgroundColor": "#001B3D"
      },
      "package": "com.yourcabradar.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      "expo-background-fetch",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "deploymentTarget": "17.0"
          }
        }
      ],
      [
        "expo-task-manager",
        {
          "ios": {
            "minimumOSVersion": "17.0"
          }
        }
      ],
      [
        "expo-background-fetch",
        {
          "ios": {
            "minimumOSVersion": "17.0"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "CabRadar needs your location to notify you about nearby opportunities, even when the app is in background.",
          "locationAlwaysPermission": "CabRadar needs background location access to notify you about nearby opportunities.",
          "locationWhenInUsePermission": "CabRadar needs your location to find nearby opportunities.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/app-icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "notification": {
      "icon": "./assets/images/app-icon.png",
      "androidIcon": "./assets/images/app-icon.png",
      "iosDisplayInForeground": true,
      "androidMode": "default",
      "androidCollapsedTitle": "CabRadar Update",
      "color": "#2196F3"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "d8f2f88c-c8f0-4f24-965e-94d07af03b5b"
      }
    },
    "owner": "am416"
  }
}
